<div>
    <button class="filter flex-start" type="button" id="filterBtn"><i class="fas fa-filter"></i></button>
</div>


<div class="flex-end create-btn-container">
    <button class="create-btn" type="button" id="createButton">Create +</button>
</div>
<div class="target">
<div class="filter-container">
        <input type="text" id="companyNameFilter" name="companyNameFilter" placeholder="Company Name">
        <button class="filterSearchBtn">Filter</button>
</div>
</div>

<div class="app-tracker-wrapper">
    <div class="flex-container align-center-middle">
        <h3 class="app-tracker-title">Your Applications</h3>
    </div>

    <div class="flex-container align-center">
        {{#if applications.length}}
        <div class="accordion-cstm" id="appArea">
                {{#each applications as |application|}}

                {{> accordion application}}

                {{/each}}
        </div>
        {{/if}}
    </div>
</div>

<!-- Modal -->

<div id="modal">
    <div class="modal-content">
        <div class="close">+</div>

        <form action="">
            <label>Job Title</label>
            <input name="app-title" type="text" placeholder="ex: Web Developer" id="jobTitleInput">
            <label>Company Name</label>
            <input name="company-title" type="text">
            <label>Description</label>
            <textarea name="description" id="appDescription"></textarea>
            <label>Application URL</label>
            <input type="text" placeholder="ex: job.com" id="applicationUrl" name="post-url">
            <input name="date" type="text" class="form-control datepicker" id="date" placeholder="Select date"
                autocomplete="off" autofill="off">
                    <select name="status">
                        <option value="Pending"><div class="pending"></div>Pending</option>
                        <option value="Ready to Apply"><div class="ready-to-apply"></div>Ready to Apply</option>
                        <option value="Submitted"><span class="submitted"></span>Submitted</option>
                        <option value="Accepted"><div class="accepted"></div>Accepted</option>
                        <option value="Declined"><div class="declined"></div>Declined</option>
                    </select>
            <label>Want to Recieve Notifications?</label>
            <input type="checkbox" id="notify-me" name="notify-me" value="Notify" placeholder="Notify Me">
            <input type="submit" class="save-btn" id="appSaveBtn">
        </form>
    </div>
</div>

