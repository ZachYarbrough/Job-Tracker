<div>
    <button id="{{id}}" class="accordion__button" type="button">
        <div class="left">
            <div class="dot-div"></div>
            <div>{{jobTitle}}</div>
        </div>
        <div class="right">
            <div class="arrow">
                <i class="fa fa-chevron-circle-down" aria-hidden="true" id='arrow'></i>
            </div>
            <div class="company">
                {{companyName}}
            </div>
        </div>
    </button>
    
    <div class="accordion__content">
        <h4 class="company_Name">{{companyName}}</h4>
        <p>Application URL: <a class="company_URL" href="{{companyURL}}" id="appLink" target="_blank">{{format_url companyURL}}</a></p>
        <p class="date_Applied">Date Applied: <span>{{format_date date}}</span></p>
        <p class="job_Description">Job Description: <span>{{description}}</span></p>
        <p>Status: <span class="status-clr">{{status}}</span></p>
        {{#if notify_me}}
        <p class="notifs">Receiving Notifications</p>
        {{else}}
        <p class="notifs">Not Receiving Notifications</p>
        {{/if}}
        <div class="btn-container">
            <button class="edit-btn">Edit</button>
            {{#if edit-btn}}
            <button class="save-btn">Save</button>
            {{/if}}
            <button class="del-btn" id="deleteBtn">Delete</button>
        </div>
    </div>
</div>